<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/styles.css" />
    <title>Blogs</title>
  </head>
  <body>
    <!-- Header -->
    <%- include('header') %>
    <main>
      <!-- Create Post Form -->
      <h1>Create Post</h1>
      <div class="createPost">
        <form action="/submit" method="POST">
          <!-- Title -->
          <label for="title">Title</label>
          <input type="text" name="title" placeholder="Title" />
          <!-- CreatorName -->
          <label for="CreatorName">Creator Name:</label>
          <input type="text" name="CreatorName" placeholder="Creator Name" />
          <!-- Time -->
          <label for="time">Time:</label>
          <input type="time" name="time" />
          <!-- Content -->
          <label for="content">Content:</label>
          <textarea id="textRezise" name="content" placeholder="Content">
          </textarea>
          <!-- Submit Button -->
          <button type="submit" value="OK">Create Post</button>
        </form>
      </div>
      <hr />
      <!-- Display Posts -->
      <h1>Posts</h1>
      <div class="post">
        <!-- Loop through posts -->
        <% posts.forEach((data) => { %>
        <div class="post-content">
          <h2><%= data.title %></h2>
          <p><%= data.CreatorName %></p>
          <p><%= data.time %></p>
          <p><%= data.content %></p>
          <!-- Delete Posts Button-->
          <form action="/delete" method="POST">
            <input type="hidden" name="id" value="<%= data.id %>" />
            <button type="submit" value="OK">Delete Post</button>
          </form>
          <!-- Edit Posts -->
          <%- include('edit') %>
        </div>
        <% }); %>
      </div>
    </main>
  </body>
  <!-- Footer -->
  <%- include('footer') %>
</html>
